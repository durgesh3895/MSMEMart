<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/card_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="@dimen/_5sdp"
       app:cardCornerRadius="@dimen/_5sdp">


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:gravity="center"
          android:orientation="horizontal">

         <LinearLayout
             android:id="@+id/border_layout"
             android:layout_width="10dp"
             android:layout_height="match_parent"
             android:orientation="vertical">


         </LinearLayout>


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="5dp"
             android:background="@color/white"
             android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/_2sdp"
                   android:orientation="horizontal">

                  <ImageView
                      android:id="@+id/unit_image"
                      android:layout_width="@dimen/_50sdp"
                      android:layout_height="@dimen/_50sdp"
                      android:src="@drawable/ic_default_unit"
                      android:scaleType="fitXY"/>

                  <LinearLayout
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1.3"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:layout_marginHorizontal="@dimen/_5sdp"
                      android:orientation="vertical">

                     <TextView
                         android:id="@+id/unit_name"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="Unit name"
                         android:textSize="@dimen/_10sdp"
                         style="@style/TextViewMediumBlack"/>

                     <TextView
                         android:id="@+id/unit_owner"
                         style="@style/TextViewMediumBlack"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="Unit owner"
                         android:textAlignment="textStart"
                         android:textSize="@dimen/_8sdp" />

                     <TextView
                         android:id="@+id/unit_contact"
                         style="@style/TextViewMediumBlack"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="Unit Contact"
                         android:textAlignment="textStart"
                         android:textSize="@dimen/_8sdp" />


                  </LinearLayout>









               </LinearLayout>


               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_marginVertical="@dimen/_5sdp"
                   android:background="@color/placeholder_bg"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/_3sdp"
                   android:orientation="horizontal">

                  <TextView
                      style="@style/TextViewRegularNormal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="District"
                      android:textAlignment="textStart"
                      android:textSize="@dimen/_10sdp" />


                  <TextView
                      android:id="@+id/unit_district"
                      style="@style/TextViewRegularBlack"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="District"
                      android:textAlignment="textEnd"
                      android:textSize="@dimen/_10sdp" />

               </LinearLayout>


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                  <TextView
                      style="@style/TextViewRegularNormal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Latitude"
                      android:textAlignment="textStart"
                      android:textSize="@dimen/_10sdp" />


                  <TextView
                      android:id="@+id/unit_latitude"
                      style="@style/TextViewRegularBlack"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Latitude"
                      android:textAlignment="textEnd"
                      android:textSize="@dimen/_10sdp" />

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                  <TextView
                      style="@style/TextViewRegularNormal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Longitude"
                      android:textAlignment="textStart"
                      android:textSize="@dimen/_10sdp" />


                  <TextView
                      android:id="@+id/unit_longitude"
                      style="@style/TextViewRegularBlack"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Longitude"
                      android:textAlignment="textEnd"
                      android:textSize="@dimen/_10sdp" />

               </LinearLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_marginVertical="@dimen/_5sdp"
                   android:background="@color/placeholder_bg"/>

               <TextView
                   android:id="@+id/unit_address"
                   style="@style/TextViewRegularBlack"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="Address"
                   android:textAlignment="textStart"
                   android:textSize="@dimen/_10sdp" />

            </LinearLayout>



         </LinearLayout>





      </LinearLayout>



   </androidx.cardview.widget.CardView>


</LinearLayout>
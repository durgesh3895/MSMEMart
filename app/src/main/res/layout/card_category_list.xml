<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/card_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="@dimen/_100sdp"
       app:cardCornerRadius="@dimen/_5sdp"
       android:layout_margin="@dimen/_5sdp"
       android:elevation="@dimen/_5sdp">

      <RelativeLayout
          android:id="@+id/relativelayout"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent" >

         <ImageView
             android:id="@+id/iv_category"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:scaleType="fitXY"
             android:src="@drawable/up_msme_logo_gray_bg"/>

         <TextView
             android:id="@+id/tv_category"
             style="@style/TextViewSemiBoldBlack"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignStart="@id/iv_category"
             android:layout_alignTop="@id/iv_category"
             android:layout_alignEnd="@id/iv_category"
             android:layout_alignBottom="@id/iv_category"
             android:gravity="center"
             android:textSize="@dimen/_10sdp"
             android:textAlignment="textStart"
             android:layout_marginHorizontal="@dimen/_10sdp"
             android:text="Category name"
             android:textColor="@color/Black" />

      </RelativeLayout>



   </androidx.cardview.widget.CardView>





</LinearLayout>
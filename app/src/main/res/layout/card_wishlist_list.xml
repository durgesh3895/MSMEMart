<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/card_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:elevation="@dimen/_1sdp"
       android:layout_margin="@dimen/_2sdp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:gravity="center"
          android:orientation="vertical">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:gravity="center"
             android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativelayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

               <ImageView
                   android:id="@+id/product_image"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_120sdp"
                   android:src="@drawable/msme_white_bg"
                   android:scaleType="fitXY"/>

               <ImageView
                   android:id="@+id/iv_wishlist"
                   style="@style/TextViewSemiBoldBlack"
                   android:layout_width="@dimen/_20sdp"
                   android:layout_height="@dimen/_20sdp"
                   android:layout_alignTop="@id/product_image"
                   android:layout_alignEnd="@id/product_image"
                   android:textSize="@dimen/_10sdp"
                   android:src="@drawable/ic_fav_active"
                   android:layout_margin="@dimen/_5sdp"
                   android:text="Category name"
                   android:textColor="@color/Black" />

            </RelativeLayout>






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:orientation="vertical">

               <TextView
                   android:id="@+id/product_name"
                   style="@style/TextViewMediumBlack"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Product name"
                   android:layout_marginTop="@dimen/_5sdp"
                   android:textAlignment="textStart"
                   android:singleLine="true"
                   android:ellipsize="middle"
                   android:layout_margin="@dimen/_2sdp"
                   android:textSize="@dimen/_10sdp" />

               <TextView
                   android:id="@+id/product_price"
                   style="@style/TextViewSemiBoldBlack"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Price"
                   android:layout_margin="@dimen/_2sdp"
                   android:layout_marginVertical="@dimen/_2sdp"
                   android:textAlignment="textStart"
                   android:textSize="@dimen/_9sdp" />

            </LinearLayout>




         </LinearLayout>



      </LinearLayout>


   </androidx.cardview.widget.CardView>





</LinearLayout>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

          <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/homelayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_5sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/dashboard"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_170sdp"
                            android:background="@drawable/user_banner"
                            android:orientation="vertical">

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

              <androidx.cardview.widget.CardView
                  android:id="@+id/profile_card"
                  android:gravity="center"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:layout_anchor="@id/dashboard"
                  android:layout_marginStart="20dp"
                  android:layout_marginEnd="20dp"
                  app:cardCornerRadius="@dimen/_5sdp"
                  app:layout_anchorGravity="bottom|center">

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

                      <LinearLayout
                          android:id="@+id/become_merchant_card"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:gravity="center"
                          android:orientation="vertical">


                          <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:gravity="center"
                              android:layout_margin="@dimen/_8sdp"
                              android:orientation="horizontal">

                              <ImageView
                                  app:srcCompat="@drawable/ic_default_user"
                                  android:layout_width="@dimen/_35sdp"
                                  android:layout_height="@dimen/_35sdp"/>

                              <LinearLayout
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_marginHorizontal="@dimen/_10sdp"
                                  android:orientation="vertical">

                                  <TextView
                                      android:id="@+id/user_name"
                                      android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:text="User name"
                                      style="@style/TextViewMediumBlack"
                                      android:textColor="@color/black"/>


                                  <TextView
                                      android:id="@+id/user_role"
                                      android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:text="User role"
                                      style="@style/TextViewRegularNormal"
                                      android:textColor="@color/black"/>


                              </LinearLayout>

                          </LinearLayout>

                      </LinearLayout>

                  </LinearLayout>

              </androidx.cardview.widget.CardView>

            </androidx.coordinatorlayout.widget.CoordinatorLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_50sdp"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/super_admin_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3sdp"
                    app:cardCornerRadius="@dimen/_3sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <ImageView
                            app:srcCompat="@drawable/super_admin_icon"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Super admin dashboard"
                                android:layout_weight="1"
                                style="@style/TextViewRegularNormal"
                                android:drawableEnd="@drawable/ic_arrow_forward"/>


                        </LinearLayout>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/contact_us_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3sdp"
                    app:cardCornerRadius="@dimen/_3sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <ImageView
                            app:srcCompat="@drawable/ic_contact_us"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Contact us"
                                android:layout_weight="1"
                                style="@style/TextViewRegularNormal"
                                android:drawableEnd="@drawable/ic_arrow_forward"/>


                        </LinearLayout>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/share_app_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3sdp"
                    app:cardCornerRadius="@dimen/_3sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <ImageView
                            app:srcCompat="@drawable/ic_share_app"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Share app"
                                android:layout_weight="1"
                                style="@style/TextViewRegularNormal"
                                android:drawableEnd="@drawable/ic_arrow_forward"/>


                        </LinearLayout>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:id="@+id/rate_app_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3sdp"
                    app:cardCornerRadius="@dimen/_3sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <ImageView
                            app:srcCompat="@drawable/ic_rate_app"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Rate app"
                                android:layout_weight="1"
                                style="@style/TextViewRegularNormal"
                                android:drawableEnd="@drawable/ic_arrow_forward"/>


                        </LinearLayout>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/about_app_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3sdp"
                    app:cardCornerRadius="@dimen/_3sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <ImageView
                            app:srcCompat="@drawable/ic_about_app"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="About app"
                                android:layout_weight="1"
                                style="@style/TextViewRegularNormal"
                                android:drawableEnd="@drawable/ic_arrow_forward"/>


                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/logout_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3sdp"
                    app:cardCornerRadius="@dimen/_3sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <ImageView
                            app:srcCompat="@drawable/ic_logout"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Log out"
                                android:layout_weight="1"
                                style="@style/TextViewRegularNormal"
                                android:drawableEnd="@drawable/ic_arrow_forward"/>


                        </LinearLayout>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tag_line"
                    style="@style/TextViewLightNormal"
                    android:textAlignment="center"
                    android:alpha=".8"
                    android:textSize="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_20sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Copyright @UPICON"
                    style="@style/TextViewLightNormal"
                    android:textAlignment="center"
                    android:textSize="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:alpha=".7"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2022-23"
                    style="@style/TextViewLightNormal"
                    android:textAlignment="center"
                    android:textSize="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:alpha=".7"/>


            </LinearLayout>





        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>
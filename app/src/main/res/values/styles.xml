<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <!--        <item name="android:windowBackground">@color/colorPrimary</item>-->
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--styles for education app-->
    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="parent.contentLayout">
        <item name="android:background">@color/contentBodyColor</item>
    </style>

    <style name="viewParent.headerText">
        <item name="android:textColor">@color/contentTextColor</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="miniTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/miniTitle</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabBackground">@drawable/tab_background</item>
    </style>

    ///dc
    <style name="TitleBarTextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/Gold</item>
        <item name="colorControlActivated">@color/Gold</item>
    </style>

    <style name="TextViewBoldNormal" parent="android:style/Widget.TextView">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="TextViewBoldBlack" parent="android:style/Widget.TextView">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewSemiBoldNormal" parent="android:style/Widget.TextView">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="TextViewSemiBoldBlack" parent="android:style/Widget.TextView">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewMediumNormal" parent="android:style/Widget.TextView">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="TextViewMediumBlack" parent="android:style/Widget.TextView">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewRegularNormal" parent="android:style/Widget.TextView">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="TextViewRegularBlack" parent="android:style/Widget.TextView">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewLightNormal" parent="android:style/Widget.TextView">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="TextViewLightBlack" parent="android:style/Widget.TextView">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="AppTheme">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0sp</item>
        <item name="windowNoTitle">true</item>

    </style>


</resources>
